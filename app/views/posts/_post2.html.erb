
<% post = post2 %>
<div class="post">

  <div class="post-content">
    <h2 class="hidden"><%= post.name %></h2>
    <div class="head">
      <h2 class="title"><%= link_to post.title, post %></h2>
    </div>
    <p class="tags">
      <% post.tag_list.each do|e| %>
      <span class="tag"><%= e %> </span>
      <% end %>
    </p>

    <p class="body" >
      <%= raw post.content %>
    </p>

  </div>
</div>
