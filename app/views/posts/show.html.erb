
<div class="post">

  <div class="post-content">
    <h1 class="hidden"><%= @post.name %></h1>
    <h1 class="title"><%= link_to @post.title, @post %></h1>
    <p class="tag">
      <%= @post.tag_list %>
    </p>
    <p class="body" >
      <%= raw @post.content %>
    </p>
  </div>
</div>

<div class="comments">
  <h2>Comments</h2>
  
  <%= render @post.comments %>


  <div class="add">
    <h2>Add a comment:</h2>
    <%= render "comments/form" %>
  </div>
</div>

<br />

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

