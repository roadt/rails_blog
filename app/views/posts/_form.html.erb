<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field hidden">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list, :class=>"tm-input", :placeholder=>"Tags" %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, 'id'=>'content_editor' %>
    <script type="text/javascript">
      UE.getEditor("content_editor", { emotionLocalization:true, iframeUrlMap: true, initialFrameHeight:600});
    </script>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
    <script type="text/javascript">
    jQuery(".tm-input").tagsInput({
        'height': '1em',
        'width': '100%'})
    .each(function(e,idx) {
        e.importTags(e.value);
    });
    </script>

<% end %>
